---
import LinkButton from "./LinkButton.astro";
import GitHub from "./icons/GitHub.astro";
import Java from "./icons/Java.astro";
import Js from "./icons/Js.astro";
import Link from "./icons/Link.astro";
import NextJS from "./icons/NextJS.astro";
import Php from "./icons/Php.astro";
import React from "./icons/React.astro";
import Tailwind from "./icons/Tailwind.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-[#003159] text-white",
    icon: React,
  },
  REACT_NATIVE: {
    name: "React Native",
    class: "bg-[#003159] text-white",
    icon: React,
  },
  PHP: {
    name: "Php",
    class: "bg-[#505c94] text-white",
    icon: Php,
  },
  JS: {
    name: "Javascript",
    class: "bg-[#f0da4f] text-black",
    icon: Js,
  },
  JAVA: {
    name: "Java",
    class: "bg-[#6df297] text-black",
    icon: Java,
  },
};
const PROJECTS = [
  {
    title: "ChatGPT - Local",
    description:
      "Chat de inteligencia artificial totalmente en local, sin costes y privado.",
    link: "https://chatgpt-local-js.vercel.app/",
    github: "https://github.com/colmenerohub/chatgpt-local-js",
    image: "/projects/chatgpt-local.webp",
    tags: [TAGS.JS],
  },
  {
    title: "eladelreves - Web Application",
    description:
      "Aplicación web de soporte para una campaña de lucha contra la enfermedad de la ELA.",
    link: "https://eladelreves-next-js.vercel.app/",
    github: "https://github.com/colmenerohub/eladelreves-next-js",
    image: "/projects/eladelreves.webp",
    tags: [TAGS.NEXT],
  },
  {
    title: "eladelreves - Mobile Application",
    description:
      "Aplicación movil, estilo TikTok e Instagram Reels que permite la subida y visualización de videos cortos.",
    github: "https://github.com/colmenerohub/eladelreves-react-native",
    image: "/projects/eladelreves-movil.webp",
    tags: [TAGS.REACT_NATIVE],
  },
  {
    title: "Reversi - Juego interactivo",
    description:
      "Reversi, también conocido como Othello, es un juego de estrategia para dos jugadores que se juega en un tablero cuadrado de 8x8 casillas.",
    link: "https://game-room-react.vercel.app/",
    github: "https://github.com/colmenerohub/game-room-react",
    image: "/projects/reversi.webp",
    tags: [TAGS.REACT],
  },
  {
    title: "Tienda de vinilos",
    description:
      "Consulta, compra y disfruta de los mejores vinilos del momento o revive viejas glorias.",
    github: "https://github.com/colmenerohub/music-shop-php",
    image: "/projects/music-shop.webp",
    tags: [TAGS.PHP],
  },
  {
    title: "Gestor de contenido",
    description:
      "Aplicación de escritorio para consultar, insertar, modificar y borrar los datos de Países, ciudades y distritos.",
    github: "https://github.com/colmenerohub/consultApp-javaswing",
    image: "/projects/consultapp.webp",
    tags: [TAGS.JAVA],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <a href={link}>
              <img
                alt={title}
                class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                src={image}
              />
            </a>
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
